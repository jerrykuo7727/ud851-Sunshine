<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's date"/>
    <TextView
        android:id="@+id/tv_display_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's weather description"/>

    <TextView
        android:id="@+id/tv_display_high_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's high temperature"/>

    <TextView
        android:id="@+id/tv_display_low_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's low temperature"/>

    <TextView
        android:id="@+id/tv_display_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's humidity"/>

    <TextView
        android:id="@+id/tv_display_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's pressure"/>

    <TextView
        android:id="@+id/tv_display_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="selected day's wind"/>

</LinearLayout>

